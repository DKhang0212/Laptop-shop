<header class="header"> 
    <div class="grid">
        <nav class="title">
            <img class="header_img" src="https://tuoitre.uit.edu.vn/wp-content/uploads/2015/07/logo-uit.png" alt="logo">
            <div class="menu">
                <ul class="list">
                    <li class="list_item"> <a href="/" class="item_link"><strong>Trang Chủ</strong> </a></li>
                    <li class="list_item"> <a href="" class="item_link"><strong>Giới Thiệu</strong> </a></li>
                    <li class="list_item"> <a href="" class="item_link"><strong>Cửa Hàng</strong></a> </li>
                    <li class="list_item"> <a href="" class="item_link"><strong>Liên Hệ</strong></a></li>
                </ul>
                <form id="search-form" class="search_box">
                    <input id="search-info"  class="search-txt" type="text" placeholder="Tìm kiếm sản phẩm">
                    <button type="submit" id="search-btn" class="search-btn">
                        <i class="fas fa-search search-icon"></i>
                    </button>
                </form>
            </div>
        </nav>
    </div>
</header>

<script>
    var searchTxt = document.querySelector('#search-info');
    var searchForm = document.querySelector('#search-form');
    var searchBtn = document.querySelector('#search-btn');
    searchBtn.addEventListener('click', () => {
        var searchInfo = searchTxt.value;
        searchForm.action = '/product/search/' + searchInfo;
        searchForm.submit();
    })
</script>